                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />
                    </androidx.core.widget.NestedScrollView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/memorialfuneral_image" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/abel"
                        android:text="Do you own funeral parlours?"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="230dp"
                        android:fontFamily="@font/abel"
                        android:text="No, we contact with aggregate formal, registered funeral parlours (and other service providers), that have the proper health department certificates
and premises and who subscribe to our partner code of ethics.  The same way that Uber contact with the driver, Dignity contracts with our service partners."
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
