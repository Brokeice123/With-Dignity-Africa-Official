                android:layout_height="620dp"
                android:columnCount="1"
                android:orientation="horizontal"
                android:rowCount="4">

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/questionsfuneral_image" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/abel"
                        android:text="How do I use this app"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="220dp">

                        <TextView
                            android:layout_width="318dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/abel"
                            android:text="Dignity Africa app is designed with user first principles making it very easy to use. The app is divided into categories
    such as funeral packages, funeral services and funeral policies. Within each category, we list a number of products from different suppliers. We list product information, details and pricing
    so you can select any product you want to purchase, fill in your card details and place an order. We then contact you immediately with the details of your order and talk you through the process
    including any documentation that we need from you. We take care of all the details so you can focus on family, not admin."
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </androidx.core.widget.NestedScrollView>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="10dp">

