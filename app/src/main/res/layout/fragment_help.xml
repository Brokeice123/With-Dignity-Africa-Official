                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="230dp"
                        android:fontFamily="@font/abel"
                        android:text="We accept debit cards, credit cards and EFT deposits. With debit and credit cards, you can pay in app using M-pesa, the world's best, most trusted online payment provider.  For EFT's you can call us and we'll provide the relevant details for an electronic transfer."
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/cash" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/abel"
                        android:text="Do you accept cash on delivery?"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="230dp"
                        android:fontFamily="@font/abel"
                        android:text="No, we only accept debit cards and EFT deposits. We will soon be accepting Lay by payments for our pre planned packages."
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/progress" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="180dp"
                        android:fontFamily="@font/abel"
                        android:text="How do I check on progress of the service?"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="318dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="230dp"
                        android:fontFamily="@font/abel"
                        android:text="Every one of our customer get a personal Dignity Africa advisor. Your advisor acts as a project manager for the service and checks up on all details, logistics and communicates with you on a pre determined and agreed schedule.
 You are also welcome to call your advisor with questions or input anytime "
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
